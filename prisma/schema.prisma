generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Permission {
  VIEW
  EDIT
}

enum Type {
  IMAGE
  VIDEO
  ARTICLE
  AUDIO
}

enum TaskStatus {
  COMPLETED
  PENDING
  REJECTED
}

enum Priorty {
  HIGH
  MEDIUM
  LOW
}

model User {
  id       String  @id @default(uuid())
  name     String?
  email    String? @unique
  phone    String? @unique
  password String?

  googleId String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contents   Content[]
  shareLinks ShareLink[]
  Task       Task[]

  @@index([email])
}

model Content {
  id        String   @id @default(uuid())
  type      Type
  title     String
  url       String?
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  shareLinks ShareLink[]
  Task       Task[]

  @@index([userId])
}

model ShareLink {
  id   String @id @default(uuid())
  hash String @unique

  contentId String
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  sharedUsers SharedUser[]

  createdAt DateTime @default(now())

  @@index([contentId])
  @@index([userId])
}

model SharedUser {
  id         String     @id @default(uuid())
  email      String
  permission Permission

  shareId String
  share   ShareLink @relation(fields: [shareId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([email, shareId])
  @@index([email])
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(PENDING)
  dueDate     DateTime?
  startTime   DateTime?
  endTime     DateTime?

  priority Priorty @default(LOW)

  contentId String?
  content   Content? @relation(fields: [contentId], references: [id], onDelete: SetNull)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  calendarEventId String?
  calendarSynced  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([dueDate])
}
