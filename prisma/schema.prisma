generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Permission {1
  VIEW
  EDIT
}

enum Type {
  IMAGE
  VIDEO
  ARTICLE
  AUDIO
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contents   Content[]
  shareLinks ShareLink[]

  @@index([email])
}

model Content {
  id        String   @id @default(uuid())
  type      Type
  title     String
  url       String?
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  shareLinks ShareLink[]

  @@index([userId])
}

model ShareLink {
  id         String     @id @default(uuid())
  hash       String     @unique
  permission Permission @default(VIEW)
  createdAt  DateTime   @default(now())

  contentId String
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  sharedUsersEmail String[]

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([contentId])
  @@index([userId])
}
