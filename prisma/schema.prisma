generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Permission {
  VIEW
  EDIT
}

enum Type {
  IMAGE
  VIDEO
  ARTICLE
  AUDIO
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contents   Content[]
  shareLinks ShareLink[]

  @@index([email])
}

model Content {
  id        String   @id @default(uuid())
  type      Type
  title     String
  url       String?
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  shareLinks ShareLink[]

  @@index([userId])
}

model ShareLink {
  id   String @id @default(uuid())
  hash String @unique

  contentId String
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  sharedUsers SharedUser[]

  createdAt DateTime @default(now())

  @@index([contentId])
  @@index([userId])
}

model SharedUser {
  id         String     @id @default(uuid())
  email      String
  permission Permission

  shareId String
  share   ShareLink @relation(fields: [shareId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([email, shareId])
  @@index([email])
}
